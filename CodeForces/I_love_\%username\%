#include<stdio.h>

int main()
{
    int n,i,ans=0,j,flag,mark;
    scanf("%d",&n);

    int a[n];

    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }

    for(i=1;i<n;i++)
    {
        flag=1;
        mark=1;

        for(j=0;j<i;j++)
        {
            if(a[i]<a[j])
                flag++;
             else  if(a[i]>a[j])
                mark++;
        }

        if(flag==i+1||mark==i+1)
            ans++;

    }

   printf("%d",ans);

    return 0;
}
