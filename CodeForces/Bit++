#include<stdio.h>
#include<string.h>
int main()
{
    int i,n,x=0;
    char s[4];
    scanf("%d",&n);
    for(i=0;i<=n;i++)
    {
        gets(s);
        if(strcmp(s,"X++")==0)
            x=x+1;
        else if(strcmp(s,"++X")==0)
            x=x+1;
        else if(strcmp(s,"X--")==0)
            x=x-1;
        else if(strcmp(s,"--X")==0)
            x=x-1;
    }
    printf("%d",x);
    return 0;
}
