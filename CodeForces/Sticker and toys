#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int quer ;
    cin >> quer;
    for(int y=0;y<quer;y++)
    {
        int num,stickr,toy;
        cin >> num >> stickr >> toy;
        if(stickr == toy && toy == num )
        {
            cout << 1 << endl;
        }
        else
        {
            cout << max(num-stickr,num-toy)+1 << endl;
        }
    }
    return 0;
}
