#include<bits/stdc++.h>
using namespace std;

int main()
{
    unsigned long long q,n,a,b,i,j;
    cin >> q;
    while(q--)
    {
        cin >> n >> a >> b;
        if(a <= b/2)
        {
            cout << a*n << endl;
            continue;
        }
        else if(n%2 == 0)
        {
            cout << (n/2)*b << endl;
            continue;
        }
        else
        {
            cout << ((n-1)/2)*b+a << endl;
            continue;
        }
    }
    return 0;
}
