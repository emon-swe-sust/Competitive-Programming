#include<stdio.h>
#include<string.h>

int main()
{
    int l,n;
    scanf("%d",&n);
    while(n!=0)
    {
        char s[100];
        scanf("%s",&s);
        l=strlen(s);
        if(l<=10)
            printf("%s\n",s);
        else
            printf("%c%d%c\n",s[0],l-2,s[l-1]);
        n--;
    }

    return 0;
}
